{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "./",
		"baseUrl": "src",
		"resolveJsonModule": true,
		"typeRoots": ["@types", "./node_modules/@types"],
		"paths": {
			"@domain": ["1-domain"],
			"@domain/*": ["1-domain/*"],

			"@application": ["2-application"],
