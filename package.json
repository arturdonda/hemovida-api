{
	"name": "hemovida-api",
	"version": "1.0.78",
	"description": "API for the Hemovida platform",
	"main": "src/index.ts",
	"scripts": {
		"predev": "set NODE_ENV=development",
		"dev": "nodemon src/index.ts -L",
		"prebuild": "rimraf ./dist",
		"build": "tsc",
		"prestart": "set NODE_ENV=production",
		"start": "node dist/src/index.js",
		"precommit": "npm version %npm_config_bump% --no-git-tag-version && git add package*.json",
		"commit": "git commit",
		"postcommit": "git push"
	},
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"helmet": "^8.0.0",
		"ipdata": "^2.2.4",
		"jsonwebtoken": "^9.0.2",
		"module-alias": "^2.2.3",
		"nodemailer": "^6.9.15",
		"pg": "^8.13.0",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.37.3",
		"uuid": "^10.0.0"
	},
	"devDependencies": {
		"@tsconfig/node20": "^20.1.4",
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/module-alias": "^2.0.4",
		"@types/node": "^22.5.0",
		"@types/nodemailer": "^6.4.16",
		"@types/uuid": "^10.0.0",
		"nodemon": "^3.1.4",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4"
	}
}
